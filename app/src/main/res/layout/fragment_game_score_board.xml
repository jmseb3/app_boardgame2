<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/match1"
    tools:context=".GameScoreBoardFragment">

    <HorizontalScrollView
        android:id="@+id/game_scroll_header"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="@id/rightline"
        app:layout_constraintStart_toStartOf="@id/leftline2"
        app:layout_constraintTop_toTopOf="@id/topline">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/game_recycler_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_score_name" />
        </RelativeLayout>
    </HorizontalScrollView>

    <ScrollView
        android:id="@+id/game_scroll_rank"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@id/game_scroll_sum"
        app:layout_constraintEnd_toStartOf="@id/game_scroll_score_horizontal"
        app:layout_constraintStart_toStartOf="@id/leftline"
        app:layout_constraintTop_toTopOf="@id/topline2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/game_recycler_rank"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_score_rank" />
        </RelativeLayout>

    </ScrollView>

    <HorizontalScrollView
        android:id="@+id/game_scroll_score_horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@id/game_scroll_sum"
        app:layout_constraintEnd_toEndOf="@id/rightline"
        app:layout_constraintStart_toEndOf="@id/game_scroll_rank"
        app:layout_constraintTop_toBottomOf="@+id/game_scroll_header">

        <ScrollView
            android:id="@+id/game_scroll_score_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/game_recycler_score"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    tools:listitem="@layout/item_score_input" />

            </RelativeLayout>


        </ScrollView>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/game_scroll_sum"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@id/underline"
        app:layout_constraintStart_toStartOf="@id/leftline2"
        app:layout_constraintEnd_toEndOf="@id/rightline"
        app:layout_constraintTop_toBottomOf="@+id/game_scroll_rank">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/game_recycler_sum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_score_name" />
        </RelativeLayout>

    </HorizontalScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="10dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="50dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="10dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="10dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="50dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/underline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>